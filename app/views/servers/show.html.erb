<%- model_class = Server -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @server.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @server.status.message %></dd>
  
  <% if false %>
  <dt><strong><%= model_class.human_attribute_name(:check_type) %>:</strong></dt>
  <dd><%= @server.check_type %></dd>
  <% end %>
</dl>

<%= link_to(t('.advisory', default: t('helpers.links.advisory')),
            server_advisories_path(@server), class: 'btn btn-default') %>

<%= link_to(t('.back', default: t('helpers.links.back')),
            servers_path, class: 'btn btn-default') %>

<%= link_to(t('.edit', default: t('helpers.links.edit')),
              edit_server_path(@server), class: 'btn btn-default') %>

<%= link_to(t('.destroy', default: t('helpers.links.destroy')),
            server_path(@server),
            method: 'delete',
            data: {
	      confirm: t('.confirm',
			 default: t('helpers.links.confirm',
				    default: 'Are you sure?')) },
            class: 'btn btn-danger') %>
