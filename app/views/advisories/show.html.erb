<%- model_class = Advisory -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:server_id) %>:</strong></dt>
  <dd><%= @server.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @advisory.email %></dd>
</dl>

<%= link_to(t('.back', default: t('helpers.links.back')),
            server_advisories_path(@server), class: 'btn btn-default')  %>

<%= link_to(t('.edit', default: t('helpers.links.edit')),
            edit_server_advisory_path(@server, @advisory),
	    class: 'btn btn-default') %>

<%= link_to(t('.send_test_mail', default: t('helpers.links.send_test_mail')),
	    send_test_mail_path(server_id: @server.id, id: @advisory.id),
            data: {
	      confirm: t('.confirm', default: t('helpers.links.confirm',
						default: 'Are you sure?')) },
	    class: 'btn btn-default') %>

<%= link_to(t('.destroy', default: t('helpers.links.destroy')),
            server_advisory_path(@server, @advisory),
            method: 'delete',
            data: {
	      confirm: t('.confirm', default: t('helpers.links.confirm',
						default: 'Are you sure?')) },
            class: 'btn btn-danger') %>
