<%= form_for([@server, @advisory]) do |f| %>
  <% if @advisory.errors.any? %>
    <div id="error_explanation">
      <h2>
	<%= pluralize(@advisory.errors.count, "error") %>
	prohibited this advisory from being saved:
      </h2>

      <ul>
      <% @advisory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
